<odoo>

    <record model="ir.ui.view" id="stock_picking_distributor_form_view">
            <field name="name">stock_picking_distributor_form_view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position='before'>
                    <field name="partner_source_id" domain="[('distributor', '=', True)]"
                    string="Partner Source" attrs="{'invisible': [('picking_type_id', '!=', %(sale_partner_distributor.distributor_to_final_customer)d )]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('distributor_id', '=', partner_source_id)]</attribute>
                </xpath>
            </field>
    </record>

</odoo>