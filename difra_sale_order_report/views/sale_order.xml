<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_add_pro_forma_description" model="ir.ui.view">
            <field name="name">sale_order_add_pro_forma_description</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page string="Note">
                            <label for="pro_forma_description"/>
                            <field name="pro_forma_description"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
</odoo>