<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_partner_add_smart_button_nb_renting_form_view">
        <field name="name">res_partner_add_smart_button_nb_renting_form_view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" class="oe_stat_button" id="renting_button" icon="fa-inbox" name="open_rentings">
                    <field name="renting_count" string="Rentings" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>