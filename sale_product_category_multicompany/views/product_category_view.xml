<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="product.product_category_company_form_view" model="ir.ui.view">
            <field name="name">	product.product_category_company_form_view</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='first']/field[@name='type']" position="after">
                        <field name="company_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>