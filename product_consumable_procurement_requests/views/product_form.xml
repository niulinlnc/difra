<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record model="ir.ui.view" id="product_consumable_procurements_form">
           <field name="name">product.consumable.procurements.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(stock.act_make_procurement)d']" position="attributes">
                    <attribute name="attrs">{'invisible': [('type', '!=', 'product'), ('type', '!=', 'consu')]}</attribute>
                </xpath>
            </field>
        </record>

        
    </data>
</odoo>
