<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_account_position_form_bob_status" model="ir.ui.view">
            <field name="name">view_account_position_form_bob_status</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="sage_status" />
                </xpath>
            </field>
        </record>

        <record id="view_account_position_form_bob_status_tree" model="ir.ui.view">
            <field name="name">view_account_position_form_bob_status_tree</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="sage_status" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>