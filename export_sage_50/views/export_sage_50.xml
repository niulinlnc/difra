<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_export_sage_50_wizard_view" model="ir.ui.view">
            <field name="name">Export Sage BOB 50 Wizard</field>
            <field name="model">export_sage_50.export_file_wizard</field>
            <field name="arch" type="xml">
                <form string="Export Sage 50 Wizard">
                    <field name="export_file_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_export_custom" string="Export" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    
        <record id="action_export_sage_50_wizard" model="ir.actions.act_window">
            <field name="name">Export Sage BOB 50 Wizard</field>
            <field name="res_model">export_sage_50.export_file_wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="action_export_sage_50_wizard_view"/>
            <field name="context">{'default_export_file_id': active_id}</field>
            <field name="target">new</field>
        </record>
        
        <!-- Export Sage 50 Tree View -->
        <record id="view_export_file_tree" model="ir.ui.view">
            <field name="name">export_sage_50.export_file.tree</field>
            <field name="model">export_sage_50.export_file</field>
            <field name="type">tree</field>
            <field eval="8" name="priority" />
            <field name="arch" type="xml">
                <tree string="Export File">
                    <field name="__last_update"/>
                    <field name="create_uid" readonly="1"/>
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="invoice_count" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>
        
        <!-- Student Group Form View -->
        <record model="ir.ui.view" id="view_export_file_form">
            <field name="name">export_sage_50.export_file.form</field>
            <field name="model">export_sage_50.export_file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export File">
                    <header>
                        <button name="action_export_all_missing" type="object" string="All Missing" class="oe_highlight"/>
                        <button name="action_export_last_month" type="object" string="Last Month" />
                        <button name="action_export_last_quarter" type="object" string="Last Quarter" />
                        <button name="%(export_sage_50.action_export_sage_50_wizard)d" type="action" string="Custom" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="__last_update"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="True"/>
                                <field name="analytic_plan" readonly="True"/>
                            </group>
                            <group>
                                <field name="export_file" filename="export_file_name"/>
                            </group>
                            <field name="invoice_ids">
                                <tree string="Invoices" create="false" delete="false" editable="false">
                                    <field name="date" />
                                    <field name="number" />
                                    <field name="partner_id" />
                                    <field name="amount_total" />
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_export_sage_50" model="ir.actions.act_window">
            <field name="name">Export Sage BOB 50</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export_sage_50.export_file</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new export for Sage 50.
                </p>
                <p>
                    Odoo helps you easily export your invoices to Sage 50.
                </p>
              </field>
        </record>
        
        <record id="action_export_sage_50_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_export_file_tree" />
            <field name="act_window_id" ref="action_export_sage_50" />
        </record>

        <record id="action_export_sage_50_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_export_file_form" />
            <field name="act_window_id" ref="action_export_sage_50" />
        </record>
        
        <menuitem name="Sage BOB 50 Exports" id="menu_export_sage_50" parent="account.menu_finance_reports" action="action_export_sage_50" groups="account.group_account_manager" sequence="10" />
    </data>
</odoo>