                                                        <span class="tiptop-primary"></span>
                                                    </label>
                                                </div>
                                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 mt16 mb16 scheme_color_libra">
                                                    <label class="icon">
                                                        <input id="scheme_color_libra" type="radio" name="scheme_color_var"
                                                               data-xmlid="website_customize_model_73lines.colors_libra" />
                                                        <span class="libra-primary"></span>
                                                    </label>
                                                </div>
                                                <!-- Footer -->
                                                <div class="col-md-12 mt16 mb16">
                                                    <strong><h4>Footer</h4></strong>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="icon">
                                                        <input id="footer_bgcolor_white" type="radio" name="footer_bgcolor_var"
                                                               data-xmlid="website_customize_model_73lines.footer_white" active="True" />
                                                        <span class="white"></span>
                                                    </label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="icon">
                                                        <input id="footer_bgcolor_gray_lighter" type="radio" name="footer_bgcolor_var"
