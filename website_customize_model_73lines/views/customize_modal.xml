<odoo>

    <!-- Customize - Customize Theme -->
    <template id="all_theme_customize_modal" inherit_id="website.theme_customize" name="All Theme Customize Modal">
        <xpath expr="//div[@id='theme_customize_modal']" position="replace">
            <div id="theme_customize_modal" class="modal fade">
                <div id="lines_customize_modal">
                    <div id="switcher-body">
                        <div class="demo_changer">
                            <div class="demo-icon">
                                <button type="button" class="close" data-dismiss="modal" style="width: 42px;height: 32px;">
                                    <i class="fa fa-close fa-1x" style="color: black;"></i>
                                    <span class="sr-only">Close</span>
                                </button>
                            </div>
                            <div class="form_holder">
                                <div class="modal-body">
                                    <ul class="nav nav-pills nav-justified">
                                        <li class="active">
                                            <a data-toggle="pill" href="#home">Color</a>
                                        </li>
                                        <li>
                                            <a data-toggle="pill" href="#menu1">Font</a>
                                        </li>
                                        <li>
                                            <a data-toggle="pill" href="#menu2">Pattern</a>
                                        </li>
                                        <li>
                                            <a data-toggle="pill" href="#menu3">Layouts</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div id="home" class="tab-pane fade in active">
                                            <div class="row">
                                                <!-- Header -->
                                                <div class="col-md-12 mt16 mb16">
                                                    <strong><h4 class="mt0">Header Color</h4></strong>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="icon">
                                                        <input id="header_bgcolor_white" type="radio" name="header_bgcolor_var"
                                                               data-xmlid="website_customize_model_73lines.header_white" active="True" />
                                                        <span class="white"></span>
                                                    </label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="icon">
                                                        <input id="header_bgcolor_gray_lighter" type="radio" name="header_bgcolor_var"
                                                               data-xmlid="website_customize_model_73lines.header_light" />
                                                        <span class="gray-lighter"></span>
                                                    </label>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="icon">
                                                        <input id="header_bgcolor_gray_darker" type="radio" name="header_bgcolor_var"
                                                               data-xmlid="website_customize_model_73lines.header_dark" />
                                                        <span class="gray-darker"></span>
                                                    </label>
                                                </div>
                                                <!-- Schemes -->
